    "@fastify/static": "^6.10.1",
    "@flatnavy/api": "*",
    "@prisma/client": "^4.12.0",
    "bcrypt": "^5.1.0",
    "fastify": "^4.15.0",
    "jose": "^4.14.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "prisma": "^4.12.0"
  }
}
